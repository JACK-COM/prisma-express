{
    "compilerOptions": {
      "allowJs": true,
      "baseUrl": "src/",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["ESNext", "DOM"],
      "noEmit": false,
      "declaration": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "useDefineForClassFields": true,
      "module": "commonJs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "outDir": "./lib/",
      "rootDir": "./src",
      "sourceMap": false,
      "strict": true,
      "target": "es5"
    },
    "include": ["./src/**/*", "./package.json"],
    "exclude": [
      "./node_modules",
      "./lib",
      "./**/*.test.*",
    ]
  }
  